<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:padding="5dp"
	android:background="#c0c0c0">
	<TextView android:id="@+id/depart" android:layout_height="wrap_content" android:textSize="8pt" android:layout_width="wrap_content" android:drawableLeft="@drawable/depart"/>
	<TextView android:id="@+id/arrival" android:layout_height="wrap_content" android:textSize="8pt" android:layout_width="wrap_content" android:drawableLeft="@drawable/arrival"/>
	<TextView android:id="@+id/price" android:layout_height="wrap_content" android:layout_width="wrap_content" android:drawableLeft="@drawable/money" android:textSize="10pt"/>
</LinearLayout>